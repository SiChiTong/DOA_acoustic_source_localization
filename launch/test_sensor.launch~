	<!-- Launching sound_localization-->
	<node pkg="sound_localization_test_sensor" type="sound_localization_test_sensor" name="sound_localization" output="screen">
		<param name="source_audio_direction_topic_1" value="$(arg source_audio_direction_topic_1)" />
