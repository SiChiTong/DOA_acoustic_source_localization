<launch>
	<!-- Parameters possible to change-->
	<arg name="n_sound_direction_publishers" value="1" />

	<arg name="source_position_3D_topic_1" value="kinect1_rgb" />
	<arg name="source_audio_direction_topic_1" value="HarkSource_2" />
	
